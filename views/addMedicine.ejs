<!-- header -->
<%- include('include/_header') %>
<!-- /header -->


    <!-- navbar -->
    <%- include('include/_navbar') %>
    <!-- /navbar -->


    <div class="container mx-auto">
        <a href="/medicine" class="btn btn-dark mt-5">
            <i class="bi bi-arrow-left me-2"></i>Back
        </a>
        <div class="row justify-content-center">
            <div class="row vh-65 d-flex align-items-center justify-content-center">
                <div class="col-md-5 col-12 d-flex flex-column">

                    <h2 class="fw-semibold mb-4 text-center">Add Medicine</h2>
    
                    <form action="/medicine/add-medicine" method="post">
                        <div class="inputs my-3">
                            <div class="mb-3">
                                <input type="text" name="medicineName" placeholder="Medicine name"
                                    value="<%= values.medicineName %>"
                                    class="form-control mb-3 mb-md-0 border-0 bg-body-secondary">
                                <% if (errors && errors.medicineName) { %>
                                    <span class="text-danger text-start">
                                        <%= errors.medicineName.msg %>
                                    </span>
                                    <% } %>
                            </div>
                            <div class="mb-3">
                                <input type="text" name="price" placeholder="Price" value="<%= values.price %>"
                                    class="form-control border-0 bg-body-secondary">
                                <% if (errors && errors.price) { %>
                                    <span class="text-danger text-start">
                                        <%= errors.price.msg %>
                                    </span>
                                    <% } %>
                            </div>

                            <div class="mb-3"> 
                                <select class="form-select form-control" name="category" aria-label="Medicine Category">
                                    <option selected hidden>Choose a category</option>

                                    <% categories.forEach(category=> { %>
                                        <option value="<%= category.value %>" <%=values && values.category===category.value ? 'selected' : '' %>>
                                            <%= category.name %>
                                        </option>
                                    <% }); %>
                                    
                                </select>
                                <% if (errors && errors.category) { %>
                                    <span class="text-danger text-start">
                                        <%= errors.category.msg %>
                                    </span>
                                <% } %>
                            </div>

    
                            <div class="bg-body-secondary p-2 rounded">
                                <div class="d-md-flex">
                                    <div class="col-3 mb-2 mb-md-0">
                                        <label for="" class="fw-semibold">Status</label>
                                    </div>
                                    <div class="col-9">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="status" id="inlineRadio1" value="In-stock" <%= values.status === "In-stock" ? "checked" : "" %>>
                                            <label class="form-check-label fw-semibold" for="inlineRadio1">In
                                                stock</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Out-of stock" <%= values.status === "Out-of stock" ? "checked" : "" %>>
                                            <label class="form-check-label fw-semibold" for="inlineRadio2">Out of
                                                stock</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% if (errors && errors.status) { %>
                                <span class="text-danger text-start">
                                    <%= errors.status.msg %>
                                </span>
                                <% } %>
                        </div>

                        <hr>
    
                        <div class=" mt-3 d-flex justify-content-between">
                            <button type="reset" class="btn btn-secondary">Clear</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<!-- footer -->
<%- include('include/_footer') %>
<!-- /footer -->