<!-- header -->
<%- include('include/_header') %>
<!-- /header -->


<!-- navbar -->
<%- include('include/_navbar') %>
<!-- /navbar -->


<div class="container mt-5">
    <div class="row my-4">
        <div class="col text-end">
            <a href="/medicine/add-medicine" type="button" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill me-2"></i></i>Add medicine
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Medicine Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <% if (allMedicines.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center fw-semibold py-3 fs-5">No medicine</td>
                    </tr>
                <% } else { %>
                <!-- Show Medicine -->
                <%- include('include/_showMedicine', {medicines: allMedicines}) %>
                    <!-- /Show Medicine -->
                <% } %>
            </tbody>
        </table>
    </div>
</div>


<!-- footer -->
<%- include('include/_footer') %>
<!-- /footer -->